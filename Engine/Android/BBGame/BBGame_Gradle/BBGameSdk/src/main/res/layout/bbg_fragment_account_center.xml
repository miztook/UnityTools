<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_title_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bbg_account_center_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dip"
            android:src="@drawable/icon_left_arrow" />

        <TextView
            android:id="@+id/bbg_account_center_title"
            style="@style/bbg_title_bar_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bbg_text_account_center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/bbg_account_center_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:src="@drawable/mapi_bbgame_logo_icon" />

        <TextView
            android:id="@+id/bbg_account_center_name"
            style="@style/bbg_title_bar_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Account"/>

        <Button
            android:id="@+id/bbg_account_center_switch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="16dp"
            android:background="@drawable/shape_btn_bg"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/bbg_text_switch_account"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bbg_account_center_bbg1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:src="@drawable/mapi_icon_phone" />

        <TextView
            android:id="@+id/bbg_account_center_phone"
            style="@style/bbg_title_bar_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="5"
            android:paddingLeft="8dp"
            android:text="@string/bbg_text_bind_phone" />

        <View
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_title_background" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:src="@drawable/mapi_icon_email" />

        <TextView
            android:id="@+id/bbg_account_center_email"
            style="@style/bbg_title_bar_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="5"
            android:onClick="onClick"
            android:paddingLeft="8dp"
            android:text="@string/bbg_title_bind_email" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bbg_account_center_bbg2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:src="@drawable/mapi_icon_password" />

        <TextView
            android:id="@+id/bbg_account_center_pwd"
            style="@style/bbg_title_bar_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="5"
            android:onClick="onClick"
            android:paddingLeft="8dp"
            android:text="@string/bbg_title_change_password" />

        <View
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@color/color_title_background" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:src="@drawable/mapi_icon_question" />

        <TextView
            android:id="@+id/bbg_account_center_service1"
            style="@style/bbg_title_bar_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="5"
            android:onClick="onClick"
            android:paddingLeft="8dp"
            android:text="@string/bbg_text_connect_customer_service" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bbg_account_center_common"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:src="@drawable/mapi_icon_move" />

        <TextView
            android:id="@+id/bbg_account_center_register_bbg"
            style="@style/bbg_title_bar_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="5"
            android:paddingLeft="8dp"
            android:text="@string/bbg_text_update_to_bbg" />

        <View
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@color/color_title_background" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:src="@drawable/mapi_icon_question" />

        <TextView
            android:id="@+id/bbg_account_center_service2"
            style="@style/bbg_title_bar_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="5"
            android:onClick="onClick"
            android:paddingLeft="8dp"
            android:text="@string/bbg_text_connect_customer_service" />
    </LinearLayout>

</LinearLayout>