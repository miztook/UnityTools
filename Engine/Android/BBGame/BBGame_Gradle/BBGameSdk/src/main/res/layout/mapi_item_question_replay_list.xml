<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mapi_wechat_you"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:textColor="#404040"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/left_rating_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/left_time_ratingTx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/bbg_rating_dialog_star_text"
                    android:textColor="#979797"
                    android:textSize="14sp" />
                <RatingBar
                    android:id="@+id/left_time_ratingBar"
                    style="?android:ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/left_time_ratingTx"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingTop="2dp"
                    android:stepSize="1"
                    android:theme="@style/bbg_ratingBar" />
                <TextView
                    android:id="@+id/left_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_time_ratingTx"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="1dip"
                    android:paddingLeft="1dip"
                    android:paddingRight="10dip"
                    android:paddingTop="1dip"
                    android:textColor="#979797"
                    android:textSize="14sp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dip"
                android:background="@drawable/mapi_wechat_me"
                android:paddingBottom="8dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="8dip"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/right_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dip"
                android:paddingBottom="1dip"
                android:paddingLeft="10dip"
                android:paddingRight="1dip"
                android:paddingTop="1dip"
                android:textColor="#979797"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>